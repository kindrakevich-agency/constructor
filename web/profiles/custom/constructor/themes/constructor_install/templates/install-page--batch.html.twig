{#
/**
 * @file
 * Theme override for the installation batch page.
 * Centered layout without sidebar and step indicators.
 */
#}
<div class="min-h-screen flex items-center justify-center bg-gray-50 p-8">
    <div class="w-full max-w-xl">
        <!-- Logo -->
        <div class="flex items-center justify-center gap-2 mb-8">
            <div class="w-10 h-10">
                <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="16" cy="16" r="14" stroke="#2563eb" stroke-width="2"/>
                    <circle cx="16" cy="16" r="6" fill="#2563eb"/>
                </svg>
            </div>
            <span class="text-2xl font-semibold text-gray-900">Constructor</span>
        </div>

        <!-- Title -->
        <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">{{ title|default('Installing Constructor'|t) }}</h1>

        <!-- Batch Content Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            <!-- Loading Icon -->
            <div class="flex items-center justify-center mb-6">
                <div class="w-16 h-16 rounded-full bg-blue-50 flex items-center justify-center">
                    <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
            </div>

            <!-- Progress Info -->
            <div class="text-center mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">{{ 'Installing Constructor Profile'|t }}</h2>
                <p class="text-gray-500 text-sm">{{ 'Please wait while we configure your site...'|t }}</p>
            </div>

            <!-- Progress Bar Content -->
            {{ page.content }}

            <!-- Status Message -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-400">{{ 'This may take a few moments'|t }}</p>
            </div>
        </div>

        <!-- Messages -->
        {% if messages %}
        <div class="mt-6">
            {{ messages }}
        </div>
        {% endif %}

        <!-- Footer -->
        <div class="text-center text-xs text-gray-400 mt-8">
            {{ 'Powered by Drupal 11'|t }}
        </div>
    </div>
</div>

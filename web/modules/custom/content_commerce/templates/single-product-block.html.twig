{#
/**
 * @file
 * Template for Single Product Block.
 *
 * Available variables:
 * - product_id: Product node ID.
 * - product_title: Product title.
 * - product_price: Formatted price.
 * - images: Array of product images with 'url' and 'alt'.
 * - colors: Array of colors with 'label' and 'hex'.
 * - sizes: Array of size values.
 * - shipping_info: Shipping information text.
 * - product_url: Product page URL.
 */
#}
<section class="py-16 lg:py-24 3xl:py-32 4xl:py-40 bg-gray-50 dark:bg-slate-800 transition-colors" data-block-type="single_product">
  <div class="max-w-7xl 3xl:max-w-8xl 4xl:max-w-9xl mx-auto px-4 sm:px-6 lg:px-8 3xl:px-12">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 3xl:gap-16 4xl:gap-20">
      <!-- Left - Product Gallery -->
      <div>
        <!-- Main Image -->
        <div class="rounded-2xl overflow-hidden mb-4 aspect-square flex items-center justify-center bg-white dark:bg-slate-900">
          {% if images|length > 0 %}
            <img id="product-main-image-{{ product_id }}" src="{{ images[0].url }}" alt="{{ images[0].alt }}" class="max-w-full max-h-full object-contain">
          {% else %}
            <svg class="w-24 h-24 text-gray-300 dark:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          {% endif %}
        </div>
        <!-- Thumbnail Gallery -->
        {% if images|length > 1 %}
          <div class="flex gap-2 sm:gap-3 items-center">
            <div class="flex gap-2 sm:gap-3 overflow-x-auto flex-1 pb-2 -mb-2">
              {% for image in images %}
                <button class="product-thumbnail flex-shrink-0 w-14 h-14 sm:w-20 sm:h-20 rounded-lg sm:rounded-xl overflow-hidden {{ loop.first ? 'opacity-100 ring-2 ring-blue-500' : 'opacity-60 hover:opacity-100' }} transition-opacity" data-image="{{ image.url }}" data-product-id="{{ product_id }}">
                  <img src="{{ image.url }}" alt="{{ image.alt }}" class="w-full h-full object-cover">
                </button>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Right - Product Details -->
      <div>
        <!-- Product Title -->
        <h1 class="text-xl sm:text-2xl lg:text-3xl 3xl:text-4xl font-bold text-gray-900 dark:text-white mb-4">{{ product_title }}</h1>

        <!-- Color Swatches -->
        {% if colors|length > 0 %}
          <div class="flex items-center gap-2 mb-4">
            {% for color in colors %}
              <button class="product-color-swatch w-7 h-7 rounded-full ring-2 ring-offset-2 {{ loop.first ? 'ring-blue-500' : 'ring-transparent hover:ring-gray-300' }}" style="background-color: {{ color.hex }}" data-color="{{ color.label }}" title="{{ color.label }}"></button>
            {% endfor %}
          </div>
        {% endif %}

        <!-- Price -->
        <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
          <span class="text-xl sm:text-2xl 3xl:text-3xl font-bold text-gray-900 dark:text-white">{{ product_price }}</span>
          <div class="flex gap-2">
            <button class="w-10 h-10 rounded-lg border border-gray-200 dark:border-slate-600 flex items-center justify-center hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
            </button>
            <button class="product-wishlist-btn w-10 h-10 rounded-lg border border-gray-200 dark:border-slate-600 flex items-center justify-center hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors">
              <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Size Selector -->
        {% if sizes|length > 0 %}
          <div class="mb-4">
            <div class="relative">
              <select class="product-size-select w-full px-4 py-3 bg-white dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 dark:text-white pr-10">
                <option value="">{{ 'Size'|t }}</option>
                {% for size in sizes %}
                  <option value="{{ size|lower }}">{{ size }}</option>
                {% endfor %}
              </select>
              <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </div>
          </div>
        {% endif %}

        <!-- Color Selector (dropdown version) -->
        {% if colors|length > 0 %}
          <div class="mb-4">
            <div class="relative">
              <select class="product-color-select w-full px-4 py-3 bg-white dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 dark:text-white pr-10">
                <option value="">{{ 'Color'|t }}</option>
                {% for color in colors %}
                  <option value="{{ color.label|lower }}">{{ color.label }}</option>
                {% endfor %}
              </select>
              <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </div>
          </div>
        {% endif %}

        <!-- Shipping Information Accordion -->
        {% if shipping_info %}
          <div class="mb-6">
            <button class="shipping-toggle w-full flex items-center justify-between py-3 border-b border-gray-200 dark:border-slate-600 text-left" data-product-id="{{ product_id }}">
              <span class="font-medium text-gray-900 dark:text-white">{{ 'Shipping information'|t }}</span>
              <svg class="shipping-icon w-5 h-5 text-gray-400 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="shipping-content hidden py-4 text-gray-600 dark:text-gray-400 text-sm">
              <p>{{ shipping_info }}</p>
            </div>
          </div>
        {% endif %}

        <!-- Quantity and Add to Cart -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
          <div class="flex items-center justify-between sm:justify-start">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-3">{{ 'Quantity'|t }}</span>
            <div class="flex items-center border border-gray-300 dark:border-slate-600 rounded-lg">
              <button class="qty-minus w-10 h-10 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors rounded-l-lg" data-product-id="{{ product_id }}">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                </svg>
              </button>
              <input type="number" class="qty-input w-12 h-10 text-center border-x border-gray-300 dark:border-slate-600 bg-transparent dark:text-white focus:outline-none" value="1" min="1" data-product-id="{{ product_id }}">
              <button class="qty-plus w-10 h-10 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors rounded-r-lg" data-product-id="{{ product_id }}">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </button>
            </div>
          </div>
          <button class="add-to-cart-btn w-full sm:flex-1 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-lg hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors" data-product-id="{{ product_id }}">
            {{ 'Add to cart'|t }}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

{#
/**
 * @file
 * Template for Article Video Block.
 *
 * Displays a random video article in a full-width video banner style.
 * Matches the "Cultivating success together" section from /example.
 *
 * Available variables:
 * - title: Block title.
 * - subtitle: Block subtitle/description.
 * - youtube_id: YouTube video ID.
 * - article_title: The article title.
 * - article_url: URL to the full article.
 */
#}
<section class="py-16 lg:py-24 3xl:py-32 4xl:py-40 bg-gray-50 dark:bg-slate-800 transition-colors" data-block-type="video_banner">
  <div class="max-w-7xl 3xl:max-w-8xl 4xl:max-w-9xl mx-auto px-4 sm:px-6 lg:px-8 3xl:px-12">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-10">
      <h2 class="text-3xl sm:text-4xl 3xl:text-5xl font-bold text-gray-900 dark:text-white mb-4">{{ title }}</h2>
      <p class="text-gray-600 dark:text-gray-300">{{ subtitle }}</p>
    </div>
    <!-- Plyr Video Player -->
    <div class="rounded-3xl overflow-hidden shadow-2xl plyr-container">
      <div class="plyr-embed" data-plyr-provider="youtube" data-plyr-embed-id="{{ youtube_id }}"></div>
    </div>
  </div>
</section>

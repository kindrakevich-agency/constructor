{#
/**
 * @file
 * Template for Article node full view.
 *
 * Available variables:
 * - node: The node entity.
 * - youtube_video_id: YouTube video ID if present.
 * - content: All node fields.
 */
#}
{% set created = node.getCreatedTime() %}

<article class="py-16 lg:py-24 bg-white dark:bg-slate-900 transition-colors">
  <div class="max-w-7xl 3xl:max-w-8xl 4xl:max-w-9xl mx-auto px-4 sm:px-6 lg:px-8 3xl:px-12">
    <!-- Back Link -->
    <div class="mb-8">
      <a href="/articles" class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        {{ 'Back to Articles'|t }}
      </a>
    </div>

    <!-- Article Header -->
    <header class="mb-12">
      <div class="flex items-center gap-4 mb-6">
        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm font-medium rounded-full">
          {% if youtube_video_id %}{{ 'Video'|t }}{% else %}{{ 'Article'|t }}{% endif %}
        </span>
        <time datetime="{{ created|date('Y-m-d') }}" class="text-gray-500 dark:text-gray-400 text-sm">
          {{ created|date('F j, Y') }}
        </time>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-6">{{ node.label }}</h1>
    </header>

    <!-- Video Player (if video article) -->
    {% if youtube_video_id %}
      <div class="mb-12 rounded-2xl overflow-hidden shadow-2xl">
        <div class="relative aspect-video bg-black plyr-container">
          <div class="plyr-embed" data-plyr-provider="youtube" data-plyr-embed-id="{{ youtube_video_id }}"></div>
        </div>
      </div>
    {% elseif node.field_article_image.entity %}
      <!-- Featured Image -->
      <div class="mb-12 rounded-2xl overflow-hidden shadow-lg">
        {{ responsive_image(node.field_article_image.entity.fileuri, 'article', node.field_article_image.alt ?: node.label, 'w-full h-auto') }}
      </div>
    {% endif %}

    <!-- Article Body -->
    {% if node.field_article_body.value %}
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <div class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
          {{ node.field_article_body.value|raw }}
        </div>
      </div>
    {% endif %}

    <!-- Share Section -->
    <footer class="mt-16 pt-8 border-t border-gray-200 dark:border-slate-700">
      <div class="flex items-center justify-between">
        <span class="text-gray-500 dark:text-gray-400 text-sm">{{ 'Share this article'|t }}</span>
        <div class="flex items-center gap-4">
          <a href="https://twitter.com/intent/tweet?url={{ url('<current>')|url_encode }}&text={{ node.label|url_encode }}" target="_blank" rel="noopener" class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-slate-800 text-gray-600 dark:text-gray-400 hover:bg-blue-500 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('<current>')|url_encode }}" target="_blank" rel="noopener" class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-slate-800 text-gray-600 dark:text-gray-400 hover:bg-blue-600 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ url('<current>')|url_encode }}&title={{ node.label|url_encode }}" target="_blank" rel="noopener" class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-100 dark:bg-slate-800 text-gray-600 dark:text-gray-400 hover:bg-blue-700 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </footer>
  </div>
</article>

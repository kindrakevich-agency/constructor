{#
/**
 * @file
 * Theme override for a progress bar.
 */
#}
<div class="progress" aria-live="polite">
  {% if label %}
    <div class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">{{ label }}</div>
  {% endif %}
  <div class="h-2 bg-gray-200 dark:bg-slate-700 rounded-full overflow-hidden">
    <div class="h-full bg-blue-600 rounded-full transition-all duration-300" style="width: {{ percent }}%;"></div>
  </div>
  {% if message %}
    <div class="text-sm text-gray-500 dark:text-gray-400 mt-2">{{ message }}</div>
  {% endif %}
</div>

{#
/**
 * @file
 * Theme override for a local task link.
 */
#}
{%
  set classes = [
    'block px-4 py-2 text-sm font-medium rounded-t-lg transition-colors',
    is_active ? 'bg-white dark:bg-slate-800 text-blue-600 dark:text-blue-400 border-b-2 border-blue-600' : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-slate-700',
  ]
%}
<li{{ attributes }}>
  <a href="{{ link['#url'] }}" class="{{ classes|join(' ') }}">{{ link['#title'] }}</a>
</li>

{#
/**
 * @file
 * Theme override for a local action link.
 */
#}
<li{{ attributes }}>
  <a href="{{ link['#url'] }}" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    {{ link['#title'] }}
  </a>
</li>

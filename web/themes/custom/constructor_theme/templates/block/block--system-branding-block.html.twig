{#
/**
 * @file
 * Theme override for a branding block.
 * Uses theme's logo.svg as fallback if no logo configured.
 */
#}
{% block content %}
  <a href="{{ path('<front>') }}" rel="home" class="flex items-center gap-2">
    <img src="{{ site_logo ?: '/themes/custom/constructor_theme/logo.svg' }}" alt="{{ 'Home'|t }}" class="h-8 w-auto" />
    {% if site_name %}
      <span class="text-xl font-bold text-gray-900 dark:text-white">{{ site_name }}</span>
    {% endif %}
  </a>
  {% if site_slogan %}
    <p class="text-sm text-gray-500 dark:text-gray-400">{{ site_slogan }}</p>
  {% endif %}
{% endblock %}

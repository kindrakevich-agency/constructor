{#
/**
 * @file
 * Theme override for a branding block.
 * Uses inline SVG as fallback if no logo configured.
 */
#}
{% block content %}
  <a href="{{ path('<front>') }}" rel="home" class="flex items-center gap-2">
    {% if site_logo %}
      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" class="h-8 w-auto" />
    {% else %}
      <svg class="w-8 h-8 text-gray-900 dark:text-white" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M16 4L4 10v12l12 6 12-6V10L16 4z" stroke="currentColor" stroke-width="2" fill="none"/>
        <path d="M16 16l12-6M16 16v12M16 16L4 10" stroke="currentColor" stroke-width="2"/>
      </svg>
    {% endif %}
    {% if site_name %}
      <span class="text-xl font-bold text-gray-900 dark:text-white">{{ site_name }}</span>
    {% endif %}
  </a>
  {% if site_slogan %}
    <p class="text-sm text-gray-500 dark:text-gray-400">{{ site_slogan }}</p>
  {% endif %}
{% endblock %}

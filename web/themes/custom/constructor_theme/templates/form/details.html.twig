{#
/**
 * @file
 * Theme override for a details element.
 */
#}
<details{{ attributes.addClass('border border-gray-200 dark:border-slate-700 rounded-lg overflow-hidden') }}>
  {% if title %}
    <summary class="px-4 py-3 bg-gray-50 dark:bg-slate-800 cursor-pointer font-medium text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
      {{ title }}
    </summary>
  {% endif %}
  <div class="p-4 space-y-4">
    {% if description %}
      <div class="text-sm text-gray-500 dark:text-gray-400">{{ description }}</div>
    {% endif %}
    {{ children }}
  </div>
</details>

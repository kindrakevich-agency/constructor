{#
/**
 * @file
 * Theme override for a fieldset element and its children.
 */
#}
<fieldset{{ attributes.addClass('border border-gray-200 dark:border-slate-700 rounded-lg p-4') }}>
  {% if legend %}
    {{ legend }}
  {% endif %}
  {% if description %}
    <div class="text-sm text-gray-500 dark:text-gray-400 mb-4">{{ description }}</div>
  {% endif %}
  {% if prefix %}
    <span class="field-prefix">{{ prefix }}</span>
  {% endif %}
  {{ children }}
  {% if suffix %}
    <span class="field-suffix">{{ suffix }}</span>
  {% endif %}
  {% if errors %}
    <div class="text-sm text-red-600 dark:text-red-400 mt-2">{{ errors }}</div>
  {% endif %}
</fieldset>

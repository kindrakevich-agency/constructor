{#
/**
 * @file
 * Constructor Theme's implementation of node.html.twig.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('claro/claro.drupal.dialog') }}

<article{{ attributes.addClass(classes) }}>
  <div class="py-16 lg:py-24 3xl:py-32 4xl:py-40">
    <div class="max-w-7xl 3xl:max-w-8xl 4xl:max-w-9xl mx-auto px-4 sm:px-6 lg:px-8 3xl:px-12">
      {{ title_prefix }}
      {% if label and not page %}
        <h2{{ title_attributes.addClass('node__title text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-8') }}>
          <a href="{{ url }}" rel="bookmark" class="hover:text-blue-500 transition-colors">{{ label }}</a>
        </h2>
      {% endif %}
      {% if label and page %}
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-8">{{ label }}</h1>
      {% endif %}
      {{ title_suffix }}

      {% if display_submitted %}
        <div class="node__meta mb-8 text-gray-600 dark:text-gray-400">
          {% if author_picture %}
            <div class="node__author-picture inline-block mr-3">
              {{ author_picture }}
            </div>
          {% endif %}
          <div class="node__submitted inline-block">
            {% trans %}
              By {{ author_name }} on {{ date }}
            {% endtrans %}
          </div>
          {{ metadata }}
        </div>
      {% endif %}

      <div{{ content_attributes.addClass('node__content prose prose-lg dark:prose-invert max-w-none') }}>
        {{ content }}
      </div>
    </div>
  </div>
</article>

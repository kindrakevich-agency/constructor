{#
/**
 * @file
 * Theme override for Team Member node.
 */
#}
<article{{ attributes.addClass('node', 'node--team-member') }}>
  <div class="max-w-4xl 3xl:max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:flex lg:gap-12">
      {# Photo #}
      <div class="lg:w-1/3 mb-8 lg:mb-0">
        {% if content.field_team_photo[0] %}
          <div class="rounded-2xl overflow-hidden">
            {{ content.field_team_photo }}
          </div>
        {% elseif node.field_team_image_url.value %}
          <div class="rounded-2xl overflow-hidden">
            <img src="{{ node.field_team_image_url.value }}" alt="{{ label }}" class="w-full h-auto object-cover aspect-square">
          </div>
        {% endif %}
      </div>

      {# Content #}
      <div class="lg:w-2/3">
        {# Name (Title) #}
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2">
          {{ label }}
        </h1>

        {# Position #}
        {% if content.field_team_position %}
          <p class="text-xl text-blue-600 dark:text-blue-400 mb-6">
            {{ content.field_team_position }}
          </p>
        {% endif %}

        {# Biography (Body) #}
        {% if content.field_team_bio %}
          <div class="prose prose-lg dark:prose-invert max-w-none">
            {{ content.field_team_bio }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</article>

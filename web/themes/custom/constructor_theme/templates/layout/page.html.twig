{#
/**
 * @file
 * Constructor Theme's implementation of page.html.twig.
 */
#}
<div class="page">
  <a href="#main-content" class="skip-link">
    {{ 'Skip to main content'|t }}
  </a>

  <header class="header" role="banner">
    <div class="container">
      <div class="header__inner">
        <div class="header__branding">
          {% if page.header %}
            {{ page.header }}
          {% endif %}
        </div>

        <button class="menu-toggle" aria-expanded="false" aria-controls="main-nav">
          <span class="visually-hidden">{{ 'Menu'|t }}</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>

        <nav class="main-nav" id="main-nav" role="navigation" aria-label="{{ 'Main navigation'|t }}">
          {% if page.primary_menu %}
            {{ page.primary_menu }}
          {% endif %}
        </nav>

        {% if page.secondary_menu %}
          <div class="header__secondary">
            {{ page.secondary_menu }}
          </div>
        {% endif %}
      </div>
    </div>
  </header>

  {% if page.hero %}
    <section class="hero">
      <div class="container">
        {{ page.hero }}
      </div>
    </section>
  {% endif %}

  {% if page.highlighted %}
    <div class="highlighted">
      <div class="container">
        {{ page.highlighted }}
      </div>
    </div>
  {% endif %}

  {% if page.breadcrumb %}
    <div class="breadcrumb-wrapper">
      <div class="container">
        {{ page.breadcrumb }}
      </div>
    </div>
  {% endif %}

  <main id="main-content" class="main-content" role="main">
    <div class="container">
      {% if page.help %}
        <div class="help">
          {{ page.help }}
        </div>
      {% endif %}

      {% if page.sidebar_first or page.sidebar_second %}
        <div class="layout-two-column{% if page.sidebar_first %} layout-two-column--sidebar-left{% endif %}">
          {% if page.sidebar_first %}
            <aside class="sidebar sidebar--first" role="complementary">
              {{ page.sidebar_first }}
            </aside>
          {% endif %}

          <div class="content">
            {{ page.content }}
          </div>

          {% if page.sidebar_second %}
            <aside class="sidebar sidebar--second" role="complementary">
              {{ page.sidebar_second }}
            </aside>
          {% endif %}
        </div>
      {% else %}
        <div class="content">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </main>

  {% if page.featured_top %}
    <section class="featured-top">
      <div class="container">
        {{ page.featured_top }}
      </div>
    </section>
  {% endif %}

  {% if page.featured_bottom %}
    <section class="featured-bottom">
      <div class="container">
        {{ page.featured_bottom }}
      </div>
    </section>
  {% endif %}

  <footer class="footer" role="contentinfo">
    <div class="container">
      <div class="footer__inner">
        {% if page.footer_first or page.footer_second or page.footer_third %}
          <div class="footer__grid">
            {% if page.footer_first %}
              <div class="footer__section">
                {{ page.footer_first }}
              </div>
            {% endif %}

            {% if page.footer_second %}
              <div class="footer__section">
                {{ page.footer_second }}
              </div>
            {% endif %}

            {% if page.footer_third %}
              <div class="footer__section">
                {{ page.footer_third }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if page.footer %}
          <div class="footer__bottom">
            {{ page.footer }}
          </div>
        {% endif %}
      </div>
    </div>
  </footer>
</div>
